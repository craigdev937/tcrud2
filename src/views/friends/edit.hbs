<main class="row">
    <section class="col-md-4 offset-md-4">
        <aside class="card">
            <div class="card-body">
                <form action="/friends/edit/{{friend.id}}" method="POST">
                    <section class="form-group">
                        <input 
                            type="text" 
                            name="name" 
                            placeholder="Write your name" 
                            class="form-control" 
                            value="{{friend.name}}" autofocus>
                    </section>
                    <section class="form-group">
                        <input 
                            type="text" 
                            name="age" 
                            placeholder="Write your age" 
                            class="form-control"
                            value="{{friend.age}}">
                    </section>
                    <section class="form-group">
                        <input 
                            type="text" 
                            name="info" 
                            placeholder="Update your info" 
                            class="form-control"
                            value="{{friend.info}}">
                    </section>
                    <button type="submit" class="btn btn-primary btn-block">
                        Update
                    </button>
                </form>
            </div>
        </aside>
    </section>
</main>

